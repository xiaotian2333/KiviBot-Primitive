{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "src",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/src": ["src/index"],
      "@/cli": ["src/cli/index"],
      "@/core": ["src/core/index"],
      "@/utils": ["src/utils/index"],
      "@/path": ["src/path"]
    },
    "resolveJsonModule": true,
    "allowJs": false,
    "checkJs": false,
    "declaration": true,
    "outDir": "lib",
    "esModuleInterop": true,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "examples", "lib/**/*"],
  "include": ["src"]
}
